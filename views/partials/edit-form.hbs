
<form id="scaleForm" method="post">

  <input form="scaleForm" type="hidden" name="id" value="{{melt.id}}">
  <div class="general-info">
    <div class="block-side">
      <label for="name">Наименование</label>
      <input type="text" name="name" id="name" class="scale-input simple-input" value="{{melt.name}}" required>

      <label for="nummelt">Номер шихты</label>
      <input readonly type="number" name="nummelt" id="nummelt" class="scale-input simple-input" value="{{melt.nummelt}}" required>
    </div>

    <div class="block-side">
      <label for="site">Номер участка</label>
      <input type="text" name="site" id="site" class="scale-input simple-input" value="{{melt.site}}">

      <label for="workdate">Дата</label>
      <input type="date" name="workdate" id="workdate" class="scale-input simple-input" value="{{melt.workdate}}">
    </div>
  </div>

  <fieldset form="scaleForm" name="fieldset" class="main-material">
    <legend><h2>Основной материал</h2></legend>

    <div class="input-container">
    {{#each melt.materials}}
      {{#each this}}
        <div class="input-block">
          <input type="text" name="material" class="scale-input material-input" value="{{@key}}" placeholder="Наименование">
          <input type="number" name="weigth" class="scale-input weigth-input" value="{{this}}" placeholder="Вес">
          
          <button type="button" class="add-button">
            <i class="icon-MS icon-ReturnKey"></i>
          </button>
          <button type="button" class="close-button">
            <i class="icon-MS icon-Delete"></i>
          </button>
      </div>
      {{/each}}
    {{/each}}
    </div>
    
  </fieldset>
  
</form>
